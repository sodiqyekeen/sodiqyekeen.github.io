
@if (posts == null)
{
    <p>Loading...</p>
}
else
{
    foreach (var post in posts)
    {
        <div class="col-lg-4 col-md-6">
            <div class="journal-info">

                <a href="#"><img src="@post.FeaturedImage" class="img-responsive" alt="img"></a>

                <div class="journal-txt">

                    <h4><a href="blog-single.html">@post.Title</a></h4>
                    <p class="separator">
                        @post.Excerpt
                    </p>
                </div>
            </div>
        </div>
    }
}

@code {
    List<Post> posts;
}
